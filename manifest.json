{
    "name": "Reviewmeta",
    "version": "1.0",
    "description": "",
    "manifest_version": 2,
    "background": {
        "scripts": [
            "lib/browser-polyfill.min.js",
            "lib/jquery-latest.js",
            "src/background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.amazon.de/*/dp/*",
                "https://www.amazon.de/dp/*",
                "https://www.amazon.com/*/dp/*",
                "https://www.amazon.com/dp/*"
            ],
            "js": [
                "lib/browser-polyfill.min.js",
                "lib/jquery-latest.js",
                "src/content.js"
            ]
        }
    ],
    "permissions": ["https://reviewmeta.com/"]
}
